<Window x:Class="Bank_lukasz_niescierewski.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowy Klient" Height="154" Width="304">
    <Grid>
        <Label Content="Nazwisko:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="63"/>
        <TextBox x:Name="TB_surname" HorizontalAlignment="Left" Height="24" Margin="78,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>
        <Button x:Name="B_cancel_customer" Content="Anuluj" HorizontalAlignment="Left" Margin="228,84,0,0" VerticalAlignment="Top" Width="50" Click="B_cancel_customer_Click"/>
        <Button x:Name="B_ok_customer" Content="OK" HorizontalAlignment="Left" Margin="193,84,0,0" VerticalAlignment="Top" Width="30" Click="B_ok_customer_Click"/>
        <Label Content="Imię:" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="63"/>
        <TextBox x:Name="TB_name" HorizontalAlignment="Left" Height="24" Margin="78,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>

    </Grid>
</Window>
